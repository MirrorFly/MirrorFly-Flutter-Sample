#   pod 'GoogleWebRTC'
  pod 'Mirrorfly-ios-framework', :git => 'https://github.com/MirrorFly/Mirrorfly-ios-framework.git', :branch => 'pod_qa'
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

